# Smart-Restaurant Backend Environment Variables
# Copy this file to `.env` and fill in real values.

# MongoDB connection string
# Local Mongo example:
# MONGO_URI=mongodb://127.0.0.1:27017/Restaurant
# Atlas Mongo example:
# MONGO_URI=mongodb+srv://<USER>:<PASSWORD>@<CLUSTER>/<DBNAME>?retryWrites=true&w=majority
MONGO_URI=

# Optional admin bootstrap settings (used if present)
# ADMIN_PASSWORD sets the default admin password for admin@dinedelight.com on first run
# ADMIN_TOKEN is used by legacy admin auth (if still enabled)
ADMIN_PASSWORD=
ADMIN_TOKEN=
